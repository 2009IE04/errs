<h1>Editing customer</h1>

<% form_for(@customer) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :customer_name %><br />
    <%= f.text_field :customer_name %>
  </p>
  <p>
    <%= f.label :furigana %><br />
    <%= f.text_field :furigana %>
  </p>
  <p>
    <%= f.label :person_in_charge %><br />
    <%= f.text_field :person_in_charge %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

