<div class="block" id="block-login">
        <h2>ログイン</h2>
        <div class="content login">
          <% form_tag session_path, {:class => 'form login'} do -%>
            <div class="group wat-cf">
              <div class="left">
                <%= label_tag 'ユーザＩＤ', nil, :class=> 'label right' %>
              </div>
              <div class="right">
                <%= text_field_tag 'login', @login, :class=>'text_field' %>
              </div>

            </div>
            <div class="group wat-cf">
              <div class="left">
                <%= label_tag 'パスワード', nil, :class=>'label right' %>
              </div>
              <div class="right">
                <%= password_field_tag 'password', nil, :class=>'text_field' %>
              </div>

            </div>
            <div class="group navform wat-cf">
              <div class="right">
                <button class="button" type="submit">
                  <img src="../images/web-app-theme/key.png" alt="Save"> ログイン
                </button>
              </div>
            </div>

          <% end -%>
        </div>
      </div>